@charset "UTF-8";
/* 颜色变量 */
.progress-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
}
.progress-box .progress-border {
  width: 307rpx;
  height: 16rpx;
  background: #FF9E97;
  border-radius: 8rpx;
  position: relative;
  -webkit-flex-shrink: 1;
          flex-shrink: 1;
}
.progress-box .progress-border .progress-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: -webkit-linear-gradient(left, #ffd7d4 0%, #ff7473 100%);
  background: linear-gradient(90deg, #ffd7d4 0%, #ff7473 100%);
  border-radius: 8rpx;
}
.progress-box .tips {
  width: 100rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  color: #FE9D00;
  font-size: 15rpx;
  margin-left: 20rpx;
  color: #FF4B42;
}
.size_small .progress-border {
  height: 12rpx !important;
}
.size_small .tips {
  width: auto !important;
}
.size_large .progress-border {
  width: 100%;
}
.size_large .tips {
  width: auto !important;
}

