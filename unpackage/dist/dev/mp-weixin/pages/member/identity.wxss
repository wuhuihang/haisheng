@charset "UTF-8";
/* 颜色变量 */
.box {
  width: 100%;
  min-height: calc(100vh - 0px);
  background: white;
}
.title-box {
  width: calc(100% - 34rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1px solid #DEDEDE;
  padding-left: 34rpx;
}
.title-box .iconfont {
  color: #ffa098;
  font-size: 44rpx;
  padding: 0 34rpx;
}
.identity-box {
  width: calc(100% - 68rpx);
  padding: 0 34rpx;
}
.identity-li {
  width: 100%;
  border-bottom: 1px solid #DEDEDE;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-content: center;
          align-content: center;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  height: 170rpx;
}
.identity-li .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  margin-bottom: 28rpx;
}
.identity-li .top .mark {
  width: 58rpx;
  height: 36rpx;
  line-height: 36rpx;
  background: #4872e5;
  border-radius: 4rpx;
  color: white;
  font-size: 22rpx;
  text-align: center;
}
.identity-li .top .name {
  font-size: 34rpx;
  margin: 0 20rpx;
}
.identity-li .top .iconfont {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #999;
}
.identity-li .top .iconfont.active {
  color: #FF4B4B;
}
.identity-li .top .rz {
  color: #666666;
  font-size: 22rpx;
}
.identity-li .bottom {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.identity-li .bottom .phone {
  font-size: 30rpx;
  color: #666666;
  margin-left: 53rpx;
}
.identity-li .bottom .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.identity-li .bottom .iconfont {
  font-size: 30rpx;
  padding-left: 10rpx;
  width: 60rpx;
  text-align: center;
}

