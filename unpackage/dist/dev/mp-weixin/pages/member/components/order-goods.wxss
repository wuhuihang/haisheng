@charset "UTF-8";
/* 颜色变量 */
.order_li {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-bottom: 30rpx;
  cursor: pointer;
}
.order_li .img {
  width: 167rpx;
  height: 167rpx;
  border-radius: 7rpx;
  margin-right: 20rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  background: #eee;
}
.order_li .detail {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  -webkit-align-content: flex-start;
          align-content: flex-start;
}
.order_li .detail .title {
  width: 100%;
  font-size: 27rpx;
  font-weight: 800;
  color: #333333;
  line-height: 36rpx;
  max-height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 6rpx;
}
.order_li .detail .types {
  font-size: 23rpx;
  font-weight: 500;
  color: #888888;
  line-height: 50rpx;
}
.order_li .detail .bottom {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 6rpx;
}
.order_li .detail .bottom .money {
  font-size: 33rpx;
  font-weight: 800;
  color: black;
}
.order_li .detail .bottom .money .icon {
  font-size: 25rpx;
}
.order_li .detail .bottom .num {
  font-size: 33rpx;
  font-weight: 500;
  color: #333333;
}

