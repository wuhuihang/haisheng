@charset "UTF-8";
/* 颜色变量 */
.score-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.score-box .score {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  color: #ffa098;
}
.score-box .score .iconfont {
  font-size: 32rpx;
}
.score-box .score .score-one {
  position: relative;
}
.score-box .score .score-one .iconxingxing11 {
  position: absolute;
  top: 0;
  width: 0%;
  overflow: hidden;
}
.score-box .score.small .iconfont {
  font-size: 22rpx;
}
.score-box .point {
  font-size: 20rpx;
  font-weight: 500;
  color: #444444;
  margin-left: 20rpx;
}

