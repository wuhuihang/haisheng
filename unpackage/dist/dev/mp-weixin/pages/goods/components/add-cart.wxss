@charset "UTF-8";
/* 颜色变量 */
.cart-box {
  width: 100%;
  height: 60vh;
  max-height: 100%;
  background: white;
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 16rpx 16rpx 0 0;
  z-index: 100;
  padding: 34rpx 0;
  padding-bottom: 110rpx;
}
.cart-box .cart-img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  padding-bottom: 20rpx;
  height: 200rpx;
  padding: 0 34rpx;
}
.cart-box .cart-img .iconcuowu {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  font-size: 40rpx;
  padding: 20rpx;
  z-index: 1;
}
.cart-box .cart-img .img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 7rpx;
  background: #eee;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin-right: 30rpx;
}
.cart-box .cart-img .money-box {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}
.cart-box .cart-img .money-box .money {
  width: 100%;
  font-size: 44rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #ffa098;
}
.cart-box .cart-img .money-box .choose-text {
  font-size: 26rpx;
  margin: 40rpx 0;
}
.cart-box .cart-img .money-box .choose-text .type {
  margin-left: 10rpx;
}
.type-cont {
  height: calc(100% - 200rpx);
  overflow-y: auto;
  padding: 0 34rpx;
}
.type-box {
  width: 100%;
  margin: 20rpx 0;
}
.type-box .title {
  font-size: 26rpx;
  color: #999999;
  line-height: 42rpx;
}
.type-box .btn-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.type-box .btn-box .gray-btn {
  background: #EEEEEE;
  color: #999999;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  margin: 18rpx 34rpx;
  margin-left: 0;
  cursor: pointer;
}
.type-box .btn-box .active {
  border: 1px solid #ffa098;
  background: #ffefee;
  color: #ffa098;
}
.buy-num {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 1px solid #EEEEEE;
  padding: 20rpx 0;
}
.buy-num .title {
  font-size: 26rpx;
  color: #999;
}
.buy-num .num-box {
  width: 150rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 40rpx 0;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.buy-num .num-box .num {
  float: left;
  font-size: 26rpx;
  padding: 0 10rpx;
  min-width: 50rpx;
  text-align: center;
}
.buy-num .num-box .iconfont {
  width: 38rpx;
  height: 38rpx;
  line-height: 38rpx;
  background: #EEEEEE;
  border-radius: 100%;
  float: left;
  color: #333;
  font-size: 20rpx;
  text-align: center;
  cursor: pointer;
}
.sure-btn {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 1;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 40rpx;
  color: white;
  background: #ffa098;
}

