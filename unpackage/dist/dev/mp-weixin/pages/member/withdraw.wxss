@charset "UTF-8";
/* 颜色变量 */
.confirm-btn {
  width: calc(100% - 60rpx);
  background: #ffa098;
  margin: 30px auto;
  height: 40px;
  line-height: 40px;
  border-radius: 50px;
  font-size: 30rpx;
  padding: 0;
  font-weight: bold;
  color: white;
  text-align: center;
  cursor: pointer;
}
.mybox {
  width: calc(100% - 120rpx);
  background: #fff;
  margin: 22rpx auto;
  border-radius: 14rpx;
  padding: 20rpx 30rpx;
}
.mybox .pay-li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 40rpx;
}
.mybox .pay-li:last-child {
  margin: 0;
}
.mybox .pay-li .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 26rpx;
}
.mybox .pay-li .left .img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.mybox .pay-li .iconfont {
  font-size: 36rpx;
}
.mybox .pay-li .iconxuanzhong {
  color: #FF6330;
}
.mybox .input {
  border: 1px solid #efefef;
  border-radius: 10rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 24rpx;
  margin-bottom: 24rpx;
  padding: 0 24rpx;
}
.mybox .input:last-child {
  margin-bottom: 0;
}
.mybox .title-line {
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.mybox .title-line .font-small {
  color: #969696;
}
.mybox .tips-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 26rpx;
}
.mybox .tips-box .allin {
  color: #ffa098;
}

