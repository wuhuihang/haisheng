@charset "UTF-8";
/* 颜色变量 */
.connect-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  overflow: hidden;
}
.connect-box .connect-li {
  width: 174rpx;
  height: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 0 14rpx;
  color: #434343;
}
.connect-box .connect-li .iconfont {
  font-size: 26rpx;
  width: 34rpx;
  color: #ffa098;
  margin-right: 10rpx;
  background: white;
}
.connect-box .connect-li .text {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 20rpx;
}
.connect-box .connect-li .btn-share::after {
  border: none;
}
.shop-bg {
  background: white;
  width: 100%;
  height: 460rpx;
  position: absolute;
  z-index: 0;
  top: 0;
  left: 0;
  right: 0;
  float: left;
}
.shop-bg .img {
  width: 100%;
  height: 100%;
}
.shop-detail {
  background: white;
  width: 618rpx;
  background: white;
  box-shadow: 0px 6px 8px 0px rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  padding: 32rpx;
  margin-top: 380rpx;
  float: left;
  position: relative;
  clear: both;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  margin-bottom: 40rpx;
}
.shop-detail::after {
  content: "";
  clear: both;
}
.shop-detail .logo {
  width: 108rpx;
  height: 108rpx;
  border-radius: 100%;
  position: absolute;
  left: 50%;
  top: -54rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background: #ffa098;
}
.shop-detail .shop-name {
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.shop-detail .parent-score {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.shop-detail .shop-text {
  font-size: 20rpx;
  font-weight: 500;
  color: #999999;
  margin: 26rpx 0;
}
.shop-detail .phone-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 100%;
  font-size: 20rpx;
  color: #444;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.shop-detail .phone-box .phone {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.shop-detail .phone-box .phone .iconfont {
  margin-left: 10rpx;
  color: #ffa098;
  font-size: 30rpx;
}
.good-intro {
  width: calc(100% - 29px);
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 40rpx;
  position: relative;
  z-index: 1;
}
.good-intro .tab-li {
  margin-right: 30rpx;
  font-size: 20rpx;
  font-weight: 500;
  position: relative;
}
.good-intro .active {
  font-size: 26rpx;
  font-weight: bold;
}
.good-intro .active::after {
  content: "";
  position: absolute;
  width: 90rpx;
  height: 12rpx;
  background: #ffa098;
  border-radius: 6rpx;
  left: 10rpx;
  bottom: 0;
  z-index: -1;
}
.good-list {
  width: calc(100% - 68rpx);
  margin: 0 auto;
}

