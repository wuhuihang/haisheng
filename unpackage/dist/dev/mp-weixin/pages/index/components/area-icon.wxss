@charset "UTF-8";
/* 颜色变量 */
.special-area {
  width: calc(100% - 68rpx);
  margin: 34rpx auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.special-area .special-li {
  width: 130rpx;
  text-align: center;
  font-size: 20rpx;
}
.special-area .special-li::after {
  margin-right: 0;
}
.special-area .special-li .text {
  margin-top: 20rpx;
}
.special-area .special-li .iconfont {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  background: red;
  color: white;
  position: relative;
}
.special-area .special-li .bg-blue {
  background: -webkit-linear-gradient(bottom, #6abcfd 0%, #a2d5fb 100%);
  background: linear-gradient(0deg, #6abcfd 0%, #a2d5fb 100%);
}
.special-area .special-li .bg-pink {
  background: -webkit-linear-gradient(bottom, #ff8c72 0%, #ff8c72 100%);
  background: linear-gradient(0deg, #ff8c72 0%, #ff8c72 100%);
}
.special-area .special-li .bg-green {
  background: -webkit-linear-gradient(bottom, #32ccb8 0%, #71ffee 100%);
  background: linear-gradient(0deg, #32ccb8 0%, #71ffee 100%);
}
.special-area .special-li .bg-purple {
  background: -webkit-linear-gradient(bottom, #82a8fe 0%, #b3caff 100%);
  background: linear-gradient(0deg, #82a8fe 0%, #b3caff 100%);
}
.special-area .special-li .purple-orange {
  background: -webkit-linear-gradient(bottom, #f9b078 0%, #feb988 100%);
  background: linear-gradient(0deg, #f9b078 0%, #feb988 100%);
}
.special-area .special-li.active .iconfont::after {
  position: absolute;
  content: "";
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 100%;
}

