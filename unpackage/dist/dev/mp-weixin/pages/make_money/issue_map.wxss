@charset "UTF-8";
/* 颜色变量 */
.color-primary {
  color: #ffa098;
}
.range-area {
  width: calc(100% - 68rpx);
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 24rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.range-area .title {
  width: 80rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.range-area .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 24rpx;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.range-area .right .primary-border {
  margin-bottom: 16rpx;
  margin-right: 16rpx;
}
.range-area .right .clear {
  border: none;
  color: #333;
}
.box .choose-area {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 30rpx auto;
  width: 600rpx;
}
.box .map {
  width: 100%;
  height: 100vh;
}
.primary-border {
  color: #8b848a;
  border-color: #8b848a;
  padding: 16rpx 40rpx;
  text-align: center;
}

