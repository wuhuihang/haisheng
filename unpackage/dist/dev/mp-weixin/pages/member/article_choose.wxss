@charset "UTF-8";
/* 颜色变量 */
.bg-btn {
  width: calc(100% - 200rpx);
  margin: 0 auto;
}
.slide_tab {
  overflow: hidden;
  width: 100%;
  height: 90rpx;
}
.article-box {
  width: 660rpx;
  padding: 20rpx 25rpx;
  background: white;
  border-radius: 10rpx;
  margin: 10rpx auto;
}
.article-box .time {
  font-size: 26rpx;
  margin-bottom: 16rpx;
  color: #666666;
}
.article-box .img {
  width: 200rpx;
  height: 180rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin-right: 40rpx;
  border-radius: 6rpx;
  background: #eee;
}
.article-box .article-cont {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-content: center;
          align-content: center;
}
.article-box .article-cont .title {
  font-size: 30rpx;
  line-height: 42rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.article-box .article-cont .name {
  font-size: 26rpx;
  color: #999999;
  width: 100%;
}
.article-box .article-cont .icon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  width: 100%;
}
.article-box .article-cont .icon .icon-li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 26rpx;
  margin-right: 36rpx;
}
.article-box .article-cont .icon .icon-li .iconfont {
  font-size: 24rpx;
  margin-right: 10rpx;
}
.article-box .article-cont .icon .icon-li:last-child {
  margin: 0;
}
.article-box .article-cont .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-content: space-between;
          align-content: space-between;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}
.font-red {
  color: #FF5F51;
}
.font-blue {
  color: #4872E5;
}

