@charset "UTF-8";
/* 颜色变量 */
.fix-box {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.fix-box .left {
  font-size: 24rpx;
}
.fix-box .left .money {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #ffa098;
}
.member-box {
  width: calc(100% -68rpx);
  padding: 24rpx 34rpx;
  background: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 34rpx;
}
.member-box .img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  margin-right: 24rpx;
}
.member-box .phone {
  font-size: 26rpx;
  color: #666666;
  margin-left: -14rpx;
}
.pay-box {
  width: calc(100% -40rpx);
  padding: 24rpx 20rpx;
  background: white;
  margin-top: 10rpx;
}
.pay-box .title-box {
  width: calc(100% -28rpx);
  padding: 0 14rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.pay-box .title-box .left {
  font-size: 30rpx;
}
.pay-box .title-box .right {
  font-size: 20rpx;
  color: #666666;
}
.pay-box .pay-li {
  width: 682rpx;
  height: 128rpx;
  background: #f7f7f7;
  border: 1px solid #bebebe;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 14rpx;
  margin: 40rpx 0;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-align-content: center;
          align-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 30rpx;
}
.pay-box .pay-li .time {
  color: #666;
  font-size: 26rpx;
  margin-top: 16rpx;
}
.pay-box .active {
  background: #ffebea;
  border: 1px solid #ff9e97;
  color: #DF5950;
}
.pay-box .active .time {
  color: #EB817A;
}
.pay-box .pay-list {
  width: calc(100% - 28rpx);
  padding: 0 14rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 36rpx;
  margin: 16rpx 0;
}
.pay-box .pay-list .iconweixinzhifu {
  font-size: 50rpx;
  color: #09bb07;
}
.pay-box .pay-list .iconxuanzhong {
  color: #ffa098;
}

