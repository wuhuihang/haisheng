@charset "UTF-8";
/* 颜色变量 */
.goods-box {
  background: white;
}
.goods-box .goods-li {
  width: calc(100% - 60rpx);
  padding: 40rpx 0;
  margin: 0 auto;
  height: auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  overflow: hidden;
}
.goods-box .goods-li .img {
  width: 280rpx;
  height: 156rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin-right: 20rpx;
  background: #e5e5e5;
}
.goods-box .goods-li .right {
  width: calc(100% - 300rpx);
  font-size: 30rpx;
}
.goods-box .goods-li .right .title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-box .goods-li .right .money-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #666;
  font-size: 20rpx;
}
.goods-box .goods-li .right .money-box .price {
  font-size: 30rpx;
  color: #f53a00;
}
.goods-box .goods-li .right .yongjin-btn {
  width: 120rpx;
  height: 42rpx;
  line-height: 42rpx;
  border: 1px solid #ffa098;
  border-radius: 10rpx;
  text-align: center;
  color: #ffa098;
  margin: 10rpx 0;
}
.goods-box .goods-li .right .set-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.goods-box .goods-li .right .set-box .btn {
  margin-right: 20rpx;
}
.bg-red {
  background: #f6591e;
  color: white;
}
.bg-orange {
  background: #feba02;
  color: white;
}
.good-shop {
  background: white;
  width: calc(100% - 60rpx);
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #eee;
}
.good-shop .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.good-shop .top .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background: #ffa098;
  color: white;
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
  margin-right: 26rpx;
}
.good-shop .top .shop-name {
  font-size: 30rpx;
}
.good-shop .top .shop-name .id {
  color: #93979f;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.good-shop .bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-top: 40rpx;
}
.good-shop .bottom .money {
  font-size: 20rpx;
}
.good-shop .bottom .right-bottom {
  width: 310rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.btn {
  width: 140rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.bg-primary {
  background: #ffa098;
  color: white;
}
.border-primary {
  border: 1px solid #ffa098;
  color: #ffa098;
}

