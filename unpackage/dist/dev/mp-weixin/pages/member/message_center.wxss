@charset "UTF-8";
/* 颜色变量 */
.box {
  background: white;
}
.message-li {
  width: calc(100% - 68rpx);
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #F0F0F0;
}
.message-li .iconfont {
  width: 84rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 100%;
  background: #F2AD45;
  color: white;
  font-size: 50rpx;
  margin-right: 30rpx;
  text-align: center;
}
.message-li .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.message-li .left .title {
  position: relative;
  width: 128rpx;
}
.message-li .left .title .dott {
  position: absolute;
  top: -10rpx;
  right: -16rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 100%;
  background: #FA6559;
  z-index: 10;
}
.message-li .left .title-box {
  font-size: 20rpx;
  color: #999;
}
.message-li .left .title-box .title {
  font-size: 30rpx;
  color: #333;
}
.message-li .left .msg-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 340rpx;
}
.message-li .time {
  font-size: 20rpx;
  color: #999;
  width: 200rpx;
  text-align: right;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.bg1 {
  background: #EC8C52 !important;
}
.bg2 {
  background: #FF9E97 !important;
}

