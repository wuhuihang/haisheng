@charset "UTF-8";
/* 颜色变量 */
.list-box .list-li {
  background: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
  height: 160rpx;
  border-bottom: 1px solid #d7d7d7;
  font-size: 30rpx;
}
.list-box .list-li .left {
  width: 520rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.list-box .list-li .left .name {
  font-size: 34rpx;
  line-height: 90rpx;
}
.list-box .list-li .left .time {
  font-size: 26rpx;
  color: #666;
}
.list-box .list-li .left .time .status {
  margin-left: 20rpx;
  color: #ffa098;
}
.list-box .list-li .btn {
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  background: #ffa098;
  color: white;
}

