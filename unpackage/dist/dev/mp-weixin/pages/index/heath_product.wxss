@charset "UTF-8";
/* 颜色变量 */
.top-img {
  width: 100%;
  height: 310rpx;
}
.top-tips-box {
  width: 682rpx;
  height: 50rpx;
  background: white;
  box-shadow: 0px 6rpx 4rpx 0px rgba(46, 46, 46, 0.13);
  border-radius: 6rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0 auto;
}
.top-tips-box .text {
  font-size: 24rpx;
  font-weight: bolder;
  font-style: italic;
  background: -webkit-linear-gradient(left, #fa6255 0%, #fcb7b0 100%);
  background: linear-gradient(90deg, #fa6255 0%, #fcb7b0 100%);
  -webkit-background-clip: text;
  color: transparent;
  width: 140rpx;
  text-align: center;
}
.top-tips-box .iconfont {
  font-size: 34rpx;
  color: #FA8E86;
  margin: 0 10rpx;
}
.box {
  width: 100%;
  margin: 0 auto;
}
.width106 {
  height: auto;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 6rpx 14rpx;
}
.goods {
  width: calc(100% - 68rpx);
  height: auto;
  margin: 20rpx auto;
}
.goods-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.goods-box .goods-li {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 332rpx;
  background: white;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 34rpx;
}
.goods-box .goods-li .img {
  width: 332rpx;
  height: 440rpx;
  background: white;
}
.width106 {
  height: auto;
  font-size: 20rpx;
  margin: 0 10rpx;
  padding: 6rpx 14rpx;
}
.title-box {
  width: calc(100% - 40rpx);
  padding: 20rpx 20rpx;
  padding-top: 0;
}
.title-box .tips-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.title-box .title {
  font-size: 30rpx;
  margin: 5rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.title-box .price-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.title-box .price-box .num {
  font-size: 32rpx;
  color: #ffa098;
}
.title-box .price-box .people-num {
  font-size: 20rpx;
  margin-left: 40rpx;
}
.group_box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.group_box .group_reward {
  padding: 4rpx 10rpx;
  background: #ffddda;
  border-radius: 19rpx;
  font-size: 22rpx;
  color: #FF7064;
}

