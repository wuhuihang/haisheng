@charset "UTF-8";
/* 颜色变量 */
.tips {
  font-size: 24rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-left: 30rpx;
  padding-top: 20rpx;
  color: gray;
}
.tips .iconfont {
  color: #ffa098;
  margin-right: 10rpx;
}
.white-box {
  width: 100%;
  height: auto;
  background: white;
  margin-bottom: 30rpx;
}
.white-box .set-li {
  margin: 0 30rpx;
  min-height: 95rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-bottom: 1px solid #E6E6E6;
  font-size: 28rpx;
}
.white-box .set-li .title {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  line-height: 95rpx;
}
.white-box .set-li .right {
  font-size: 26rpx;
  color: #999999;
  text-align: right;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.white-box .set-li .right .text {
  width: 400rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.white-box .set-li:last-child {
  border: none;
}
.white-box .all-line {
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.white-box .all-line .title {
  width: 100%;
}
.white-box .all-line .right {
  width: 100%;
  min-height: 95rpx;
  text-align: left;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.white-box .all-line .right .input {
  font-size: 26rpx;
  text-align: left;
  width: calc(100% - 100rpx);
}
.white-box .all-line .right .primary-btn {
  width: 80rpx;
  text-align: center;
}
.submit {
  width: 236rpx;
  height: 74rpx;
  background: #ff9e97;
  border-radius: 37rpx;
  font-size: 30rpx;
  color: white;
  text-align: center;
  line-height: 74rpx;
  margin: 100rpx auto;
  margin-bottom: 0;
}

