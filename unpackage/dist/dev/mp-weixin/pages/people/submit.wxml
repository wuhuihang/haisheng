<block wx:if="{{type_check}}"><view class="box"><view class="info-li"><view class="left"><view class="title">店铺名称<text class="text-red">*</text></view></view><input class="info-li-input" type="text" placeholder="请输入店铺名称" data-event-opts="{{[['input',[['__set_model',['','merchantShopName','$event',[]]]]]]}}" value="{{merchantShopName}}" bindinput="__e"/></view><view class="info-li all-line"><view class="title">店铺介绍<text class="text-red">*</text></view><textarea class="info-li-input info-li-textarea" style="text-align:left;" type="text" maxlength="35" placeholder="请填写店铺介绍(35字以内)" data-event-opts="{{[['input',[['__set_model',['','shopDesc','$event',[]]]]]]}}" value="{{shopDesc}}" bindinput="__e"></textarea></view><view class="info-li"><view class="left"><view class="title">店铺微信号<text class="text-red">*</text></view></view><input class="info-li-input" type="text" placeholder="请输入微信号" data-event-opts="{{[['input',[['__set_model',['','shopWechatId','$event',[]]]]]]}}" value="{{shopWechatId}}" bindinput="__e"/></view><view class="info-li"><view class="left"><view class="title">店铺类型<text class="text-red">*</text></view></view><block wx:if="{{shop_type.length>0}}"><picker value="{{shop_index}}" range="{{shop_type}}" range-key="label" data-event-opts="{{[['change',[['shopChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{shopType}}</view></picker></block></view><view data-event-opts="{{[['tap',[['getLocation',['$event']]]]]}}" class="info-li all-line" bindtap="__e"><view class="title">店铺地址<text class="text-red">*</text></view><input class="info-li-input" style="text-align:left;" disabled="true" type="text" placeholder="请输入详细地址" data-event-opts="{{[['input',[['__set_model',['','shopAddress','$event',[]]]]]]}}" value="{{shopAddress}}" bindinput="__e"/></view><view class="info-li"><view class="left"><view class="title">店长手机号<text class="text-red">*</text></view></view><input class="info-li-input" maxlength="11" type="text" placeholder="请输入店长手机号" data-event-opts="{{[['input',[['__set_model',['','shopManagerMobile','$event',[]]]]]]}}" value="{{shopManagerMobile}}" bindinput="__e"/></view><view class="info-li"><view class="left"><view class="title">店长姓名<text class="text-red">*</text></view></view><input class="info-li-input" type="text" placeholder="请输入店长姓名" data-event-opts="{{[['input',[['__set_model',['','shopManagerName','$event',[]]]]]]}}" value="{{shopManagerName}}" bindinput="__e"/></view><view class="info-li"><view class="left"><view class="title">营业状态<text class="text-red">*</text></view></view><picker value="{{status_index}}" range="{{picker_content}}" range-key="name" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{picker_content[status_index].name}}</view></picker></view><view class="info-li all-line"><view class="title">备注</view><input class="info-li-input" style="text-align:left;" type="text" placeholder="请输入备注" data-event-opts="{{[['input',[['__set_model',['','remarks','$event',[]]]]]]}}" value="{{remarks}}" bindinput="__e"/></view><view class="info-li info-photo-li"><view class="card-title">店铺背景图<text class="text-red">*</text></view><view class="photo_list"><block wx:if="{{!picUrl}}"><view data-event-opts="{{[['tap',[['chooseImage',['picUrl']]]]]}}" class="photo_li" bindtap="__e"><view class="photo_default"><image class="default_icon" lazy-load="{{true}}" src="../../static/images/photo.png" mode="aspectFill"></image><view class="default_text">上传照片</view></view></view></block><block wx:else><view class="photo_li "><image class="default_img" lazy-load="{{true}}" src="{{pic_url}}" mode="aspectFill"></image><view data-event-opts="{{[['tap',[['closeImg',['picUrl']]]]]}}" class="iconfont iconcuowu" bindtap="__e"></view></view></block></view></view><view data-event-opts="{{[['tap',[['save',['$event']]]]]}}" class="next-btn" bindtap="__e">提交信息</view></view></block><block wx:else><view class="empty"><image class="empty-icon" lazy-load="{{true}}" src="../../static/images/mescroll-empty.png" mode></image><view class="empty-tip">记录为空</view></view></block>