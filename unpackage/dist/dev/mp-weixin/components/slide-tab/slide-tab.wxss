
._div,
scroll-view,
swiper {
	box-sizing: border-box;
}
.wuc-tab {
    white-space: nowrap;
}
.wuc-tab-item {
    height: 90rpx;
    display: inline-block;
    line-height: 90rpx;
    margin: 0 10rpx;
    padding: 0 20rpx;
	font-size: 30rpx;
}
.wuc-tab-item.cur {
   position: relative;
	font-weight: 800;
}
.wuc-tab-item.cur::after {
	content: "";
	width: 70rpx;
	height: 10rpx;
	position: absolute;
	bottom: 10rpx;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	z-index: 2;
	background: #FFA098;
	border-radius:3px;
}
.wuc-tab.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 99;
	box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
