  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 30rpx 0;
  width: 420rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.team-box .team-li .top .info .img {
  width: 98rpx;
