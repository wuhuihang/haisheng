@charset "UTF-8";
/* 颜色变量 */
.fix-box .bg-btn {
  width: 100%;
}
.address-box {
  width: 708rpx;
  background: white;
  border-radius: 14rpx;
  margin: 30rpx auto;
  font-size: 30rpx;
}
.address-box .address-li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 650rpx;
  padding: 0 26rpx;
  min-height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #eee;
}
.address-box .address-li .text {
  width: 130rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.address-box .address-li .input {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  text-align: right;
  height: 60rpx;
  color: #333;
}
.address-box .long-line {
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.address-box .long-line .text {
  width: 650rpx;
}
.address-box .long-line .input {
  text-align: left;
  margin-bottom: 40rpx;
}
.iconlujing {
  font-size: 40rpx;
}
.iconxuanzhong {
  color: #FF6330;
}

