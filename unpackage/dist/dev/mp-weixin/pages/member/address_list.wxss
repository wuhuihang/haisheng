@charset "UTF-8";
/* 颜色变量 */
.box {
  width: 100%;
  min-height: calc(100vh - 0px - 0px);
  background: white;
}
.address-li {
  width: calc(100% - 80rpx);
  margin: 0 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  padding: 30rpx 0;
}
.address-li::after {
  content: "";
  position: absolute;
  left: -40rpx;
  bottom: 0;
  width: calc(100% + 80rpx);
  height: 1px;
  background: #D5D5D5;
  z-index: 1;
}
.address-li .iconfont {
  font-size: 40rpx;
}
.address-li .address-box {
  width: 500rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  font-size: 30rpx;
}
.address-li .address-box .title {
  max-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.address-li .address-box .title .default {
  background: #FF6330;
  border-radius: 6rpx;
  color: white;
  font-size: 22rpx;
  padding: 7rpx 6rpx;
  text-align: center;
  margin-right: 8rpx;
}
.address-li .address-box .name-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 24rpx 0;
  margin-bottom: 0;
}
.iconxuanzhong {
  color: #FF6330 !important;
}
.bg-btn {
  width: 100%;
}

