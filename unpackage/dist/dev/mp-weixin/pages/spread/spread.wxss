@charset "UTF-8";
/* 颜色变量 */
.box {
  width: calc(100% - 70rpx);
  margin: 0 auto;
}
.box .top-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.choose-article {
  width: 136rpx;
  height: 42rpx;
  background: lightgray;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #555555;
  text-align: center;
  line-height: 42rpx;
  cursor: pointer;
}
.money-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-top: 30rpx;
  margin-bottom: 140rpx;
  padding: 0 20rpx;
}
.money-box .money-li {
  width: 188rpx;
  height: 188rpx;
  border: 2rpx solid #ff9e97;
  border-radius: 8rpx;
  text-align: center;
  font-size: 44rpx;
  color: #ff9e97;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-align-content: center;
          align-content: center;
  margin-right: 28rpx;
  margin-bottom: 30rpx;
}
.money-box .money-li .time {
  font-size: 20rpx;
  width: 100%;
  text-align: center;
  color: #333333;
  margin-bottom: 30rpx;
}
.money-box .money-li:nth-child(3n) {
  margin-right: 0;
}
.tips-small {
  font-size: 18rpx;
  color: #666666;
  opacity: 0.6;
  margin-top: 20rpx;
}

