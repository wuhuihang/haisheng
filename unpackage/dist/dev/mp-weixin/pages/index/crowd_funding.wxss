@charset "UTF-8";
/* 颜色变量 */
.top-img {
  width: 100%;
  height: 310rpx;
}
.people-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 18rpx;
  color: #999;
}
.people-box .people-box-l {
  width: 50%;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.people-box .people-box-l .num {
  color: #333;
  font-size: 26rpx;
  margin: 4rpx 0;
}
.good-classified {
  width: calc(100% - 68rpx);
  height: auto;
  margin: 20rpx auto;
}
.width106 {
  height: auto;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 6rpx 14rpx;
}
.goods-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.goods-box .goods-li {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 332rpx;
  background: white;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 34rpx;
  height: 540rpx;
  background: white;
  overflow: hidden;
}
.goods-box .goods-li .img {
  width: 100%;
  height: 300rpx;
  background: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.title-box {
  width: calc(100% - 40rpx);
  padding: 18rpx 20rpx;
  padding-top: 0;
  float: left;
  overflow: hidden;
}
.title-box .tips-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 5rpx 0;
}
.title-box .bg-btn {
  background: -webkit-linear-gradient(left, #fa8f86 0%, #fcbfaf 100%);
  background: linear-gradient(90deg, #fa8f86 0%, #fcbfaf 100%);
}
.title-box .title {
  font-size: 30rpx;
  margin: 5rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.title-box .price-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.title-box .price-box .num {
  font-size: 32rpx;
  color: #ffa098;
}
.title-box .price-box .people-num {
  font-size: 20rpx;
  margin-left: 40rpx;
}

