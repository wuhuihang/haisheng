@charset "UTF-8";
/* 颜色变量 */
.time {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #999;
  font-size: 20rpx;
}
.list-li {
  width: 620rpx;
  height: auto;
  background: white;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  padding: 40rpx 30rpx;
  margin: 0 auto;
}
.list-li .title {
  font-size: 30rpx;
}
.list-li .content {
  font-size: 26rpx;
  color: #999;
  margin-top: 24rpx;
  line-height: 1.5;
}

