@charset "UTF-8";
/* 颜色变量 */
.box {
  background: white;
  min-height: calc(100vh - 0px);
}
.top-img {
  width: 100%;
  height: 320rpx;
  margin-bottom: 80rpx;
}
.money-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 710rpx;
  height: 198rpx;
  background: white;
  box-shadow: 0px 6rpx 5rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -352rpx;
}
.money-box .money-li {
  width: 50%;
  text-align: center;
  position: relative;
}
.money-box .money-li .num {
  width: 100%;
  font-size: 36rpx;
  color: #D14036;
  margin: 30rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #333;
}
.money-box .money-li .num .iconfont {
  margin-right: 16rpx;
  color: #ffa098;
  font-size: 36rpx;
}
.money-box .money-li .title {
  font-size: 24rpx;
  color: #FF4B4B;
  font-size: 30rpx;
}
.money-box .money-li::after {
  position: absolute;
  top: 50%;
  margin-top: -40rpx;
  right: 0;
  z-index: 10;
  content: "";
  width: 2rpx;
  height: 80rpx;
  background: #C6C6C6;
}
.money-box .money-li:last-child::after {
  background: white;
}
.spread-rule-box {
  width: 480rpx;
  height: auto;
  padding: 50rpx 40rpx;
  margin: 60rpx auto;
  border: 1px dotted #ffa098;
  border-radius: 8rpx;
  font-size: 28rpx;
  position: relative;
  color: #999;
}
.spread-rule-box .title {
  width: 160rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: white;
  position: absolute;
  top: -20rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  font-size: 30rpx;
  color: #ffa098;
}
.spread-rule-box .spread-li {
  margin-bottom: 34rpx;
}
.spread-rule-box .spread-li:last-child {
  margin-bottom: 0;
}

