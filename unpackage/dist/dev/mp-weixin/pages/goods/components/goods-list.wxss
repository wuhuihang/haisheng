@charset "UTF-8";
/* 颜色变量 */
.width106 {
  height: auto;
  font-size: 20rpx;
  margin: 0 10rpx;
  padding: 6rpx 14rpx;
}
.goods-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.goods-box .goods-li {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  width: 328rpx;
  background: white;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 34rpx;
}
.goods-box .goods-li .img {
  width: 100%;
  height: 410rpx;
  background: white;
}
.title-box {
  width: calc(100% - 40rpx);
  padding: 20rpx 20rpx;
  padding-top: 0;
}
.title-box .tips-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.title-box .title {
  font-size: 30rpx;
  margin: 12rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.title-box .price-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.title-box .price-box .num {
  font-size: 32rpx;
  color: #ffa098;
}
.title-box .price-box .people-num {
  font-size: 20rpx;
  margin-left: 40rpx;
}

