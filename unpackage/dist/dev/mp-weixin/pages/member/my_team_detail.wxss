  -webkit-align-items: center;
          align-items: center;
}
.team-box .team-li .top .info .info-detail .phone .id {
  margin-left: 20rpx;
  color: #666666;
  font-size: 22rpx;
}
.team-box .team-li .top .money {
  font-size: 24rpx;
