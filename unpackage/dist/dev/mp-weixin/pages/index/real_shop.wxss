@charset "UTF-8";
/* 颜色变量 */
.no-address {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding-top: 16vh;
}
.no-address .text {
  color: #666;
  font-size: 30rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
}
.top-type {
  width: 682rpx;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 26rpx;
  margin: 0 auto;
}
.top-type .type-l {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 26rpx;
}
.top-type .type-l .iconfont {
  color: #FF9E97;
  margin-right: 6rpx;
}
.top-type .shop-type {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 150rpx;
  height: 38rpx;
  background: white;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.16);
  border-radius: 19rpx;
  font-size: 24rpx;
}
.top-type .shop-type .iconfont {
  font-size: 20rpx;
  margin-left: 6rpx;
}
.shop-li {
  width: 622rpx;
  height: 140rpx;
  background: white;
  box-shadow: 0px 0px 10rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 30rpx 30rpx;
  margin: 30rpx auto;
  font-size: 20rpx;
}
.shop-li .img {
  width: 168rpx;
  height: 140rpx;
  border-radius: 4rpx;
  margin-right: 30rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  background: #ffa098;
}
.shop-li .shop-li-r {
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  width: calc(100% - 220rpx);
}
.shop-li .shop-li-r .title {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: -10rpx;
}
.shop-li .shop-li-r .title .text {
  width: 320rpx;
  font-size: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.shop-li .shop-li-r .title .text .shopname {
  max-width: 210rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 10rpx;
}
.shop-li .shop-li-r .title .text .cardimg {
  width: 90rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.shop-li .shop-li-r .title .text .img-card {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.shop-li .shop-li-r .title .juli {
  width: 100rpx;
  text-align: right;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  color: #FF3D34;
}
.shop-li .shop-li-r .score {
  width: 164rpx;
}
.shop-li .shop-li-r .parent-score {
  margin: 16rpx 0;
}
.shop-li .shop-li-r .place {
  width: 100%;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 20rpx;
}
.shop-li {
  margin-top: 0;
}

