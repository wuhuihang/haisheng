@charset "UTF-8";
/* 颜色变量 */
.border-btn {
  padding: 6rpx 20rpx;
  border: 1px solid #ffd1cd;
  border-radius: 22rpx;
  color: #ED6458;
  font-size: 22rpx;
  margin-left: 30rpx;
  font-weight: 500;
}
.confirm-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: red;
  z-index: 10;
  opacity: 0;
}
.scale > ._div,
.scale > ._img {
  height: 0;
  padding-bottom: 45%;
  overflow: hidden;
  background-position: center center !important;
  background-repeat: no-repeat !important;
  background-size: cover !important;
}
.primary-btn {
  width: 574rpx;
  height: 64rpx;
  background: #ff9e97;
  border-radius: 32rpx;
  padding: 0;
  text-align: center;
  line-height: 64rpx;
  color: white;
  margin: 40rpx auto;
  font-size: 24rpx;
}
.primary-btn .img {
  width: 32rpx;
  height: 21rpx;
  margin-left: 16rpx;
}
.bg-btn {
  width: 100%;
}
.box {
  width: 682rpx;
  margin: 0 auto;
}
.box .banner {
  background: white;
  width: 100%;
  height: auto;
  border-radius: 14rpx;
  overflow: hidden;
  margin-top: 30rpx;
}
.box .banner .goods-box {
  width: 100%;
  height: 310rpx;
}
.box .banner .goods-box .img {
  width: 100%;
  height: 100%;
}
.box .banner .banner-title {
  font-size: 30rpx;
  padding: 30rpx 20rpx;
}
.box .banner .banner-title .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 10rpx;
}
.box .banner .banner-title .top .name {
  font-size: 32rpx;
  color: #FF9E97;
  margin-right: 18rpx;
}
.box .banner .banner-title .top .reward {
  font-size: 20rpx;
  color: #444444;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.box .banner .banner-title .title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}
.box .banner .banner-title .title .text {
  color: #333;
  margin-top: 10rpx;
}
.box .banner .banner-title .share {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: -webkit-linear-gradient(left, #fa6255 0%, #fcb7b0 100%);
  background: linear-gradient(90deg, #fa6255 0%, #fcb7b0 100%);
  border-radius: 0px 20rpx 0px 20rpx;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin-left: 0;
  margin-right: 0;
  line-height: 1.5;
}
.box .banner .banner-title .share .iconfont {
  font-size: 20rpx;
  margin-right: 4rpx;
}
.box .detail-box {
  width: calc(100% - 40rpx);
  height: auto;
  border-radius: 14rpx;
  overflow: hidden;
  background: white;
  font-size: 30rpx;
  padding: 20rpx;
}
.box .detail-box image {
  width: 100%;
}
.box,
.box .card-recommend {
  height: auto;
}
.box .card-li,
.box .card-recommend .card-li {
  width: calc(100% - 60rpx);
  padding: 30rpx;
  background: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 14rpx 0;
}
.box .card-li .img,
.box .card-recommend .card-li .img {
  width: 214rpx;
  height: 140rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin-right: 30rpx;
}
.box .card-li .right,
.box .card-recommend .card-li .right {
  width: calc(100% - 230rpx);
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
  font-size: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-align-content: space-between;
          align-content: space-between;
}
.box .card-li .right .title,
.box .card-recommend .card-li .right .title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.box .card-li .right .desc,
.box .card-recommend .card-li .right .desc {
  width: 100%;
  font-size: 22rpx;
  color: #444444;
}
.box .card-li .right .price,
.box .card-recommend .card-li .right .price {
  width: 100%;
  color: #FF9E97;
}

