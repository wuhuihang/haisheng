@charset "UTF-8";
/* 颜色变量 */
.progress-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
}
.progress-box .progress-border {
  width: 240rpx;
  height: 14rpx;
  border: 2px solid #ffd38e;
  border-radius: 8rpx;
  position: relative;
  -webkit-flex-shrink: 1;
          flex-shrink: 1;
}
.progress-box .progress-border .progress-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: #FE9D00;
  border-radius: 8rpx;
}
.progress-box .tips {
  width: 100rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  color: #FE9D00;
  font-size: 18rpx;
  margin-left: 20rpx;
}

