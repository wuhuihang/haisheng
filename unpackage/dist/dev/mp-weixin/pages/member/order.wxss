@charset "UTF-8";
/* 颜色变量 */
.slide_tab {
  overflow: hidden;
  width: 100%;
  height: 90rpx;
}
.box_all {
  margin-bottom: 30rpx;
}
.order_box {
  width: calc(100% - 80rpx);
  background: white;
  border-radius: 20rpx;
  margin: 20rpx auto;
  margin-bottom: 0;
  padding: 20rpx;
  overflow: hidden;
}
.order_box .shop-content {
  width: calc(100% - 40rpx);
  margin: 0 auto;
  height: auto;
  overflow: hidden;
}
.order_box .shop-content .shop-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 30rpx;
  height: 90rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.order_box .shop-content .shop-title .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.order_box .shop-content .shop-title .iconfont {
  margin-right: 20rpx;
  font-size: 30rpx;
}
.order_box .order_num {
  width: 100%;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.order_box .order_num .left {
  font-size: 28rpx;
  font-weight: 500;
  color: black;
}
.order_box .order_num .right {
  font-size: 30rpx;
  font-weight: 800;
  color: #ef7411;
}
.order_box .order_num .text-black {
  color: black;
  font-weight: bold;
}
.order_box .order_box_bottom .total {
  width: 100%;
  text-align: right;
  color: #000;
  font-size: 25rpx;
}
.order_box .order_box_bottom .total .icon {
  font-size: 24rpx;
  font-weight: 800;
}
.order_box .order_box_bottom .total .money {
  font-size: 33rpx;
  font-weight: 800;
}
.order_box .order_cont .total {
  width: 100%;
  text-align: right;
  color: #000;
  font-size: 25rpx;
}
.order_box .order_cont .total .icon {
  font-size: 24rpx;
  font-weight: 800;
}
.order_box .order_cont .total .money {
  font-size: 33rpx;
  font-weight: 800;
}
.order_box .order_bottom {
  width: 400rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  text-align: right;
  float: right;
  margin: 38rpx 0;
  margin-bottom: 20rpx;
  clear: both;
}
.order_box .order_bottom1 {
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}

