@charset "UTF-8";
/* 颜色变量 */
.box {
  width: 100%;
  min-height: calc(100vh - 0px);
  background: white;
}
.login-box {
  width: calc(100% - 80rpx);
  margin: 0 auto;
}
.login-box .login-line {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}
.login-box .login-line .title {
  width: 250rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.login-box .login-line .input {
  font-size: 26rpx;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}
.login-box .login-line .find-pass {
  font-size: 24rpx;
  color: #ffa098;
}
.bg-btn {
  margin-top: 100rpx;
}

