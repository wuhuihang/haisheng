@charset "UTF-8";
/* 颜色变量 */
.type-list {
  width: 100%;
  height: auto;
  margin: 20rpx auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 26rpx;
  position: relative;
  z-index: 2;
}
.type-list .type-li {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  position: relative;
  overflow-y: hidden;
  display: inline-block;
  text-align: center;
  margin-right: 40rpx;
}
.type-list .type-li:last-child {
  margin-right: 0;
}
.type-list .active {
  font-size: 30rpx;
  font-weight: bold;
}
.type-list .active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 10%;
  width: 80%;
  height: 12rpx;
  background: #ffa098;
  border-radius: 6rpx;
  z-index: -1;
}

